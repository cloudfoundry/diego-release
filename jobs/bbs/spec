  diego.bbs.sql.db_username:
    description: "Username to use for connecting to SQL backend"
    default: ""
  diego.bbs.sql.db_password:
    description: "Password to use for connecting to SQL backend"
    default: ""
  diego.bbs.sql.db_driver:
