---
processes:
- name: rep
  executable: /var/vcap/jobs/rep/bin/rep
  limits:
    open_files: 100000
  hooks:
    pre_start: /var/vcap/jobs/rep/bin/bpm-pre-start
  ephemeral_disk: true
  additional_volumes:
    - path: <%= p("diego.executor.volman.driver_paths") %>
    - path : /var/vcap/data/garden
      writable: true
