#!/bin/bash
# vim: set ft=sh

set -e

cd diego-release/

export GOROOT=/usr/local/go
export PATH=$GOROOT/bin:$PATH

export GOPATH=$PWD
export PATH=$PWD/bin:$PATH

go install github.com/onsi/ginkgo/ginkgo

ERROR_CODE=1

pushd src/code.cloudfoundry.org/route-emitter > /dev/null
  ginkgo -r -keepGoing -trace -randomizeAllSpecs -progress \
    routing_table/benchmarks

  ERROR_CODE=$?
popd > /dev/null

exit $ERROR_CODE
